math = importc('math')

// Isoceles triangle

class Triangle {
    fn __init__(base, hypotenuse) {
        self.base = base
        self.hypotenuse = hypotenuse
        self.height = self.get_height()
    }

    fn get_height() {
        b = self.base / 2
        ans = math.pow(self.hypotenuse, 2) - math.pow(b, 2)
        
        return math.sqrt(ans)
    }

    fn get_area():
        return 0.5 * self.base * self.height

    fn get_perimeter(self):
        return self.hypotenuse * 2 + self.base
}


shape = Triangle(6, 12)

print(shape.height)
